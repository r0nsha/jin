fn extern "c" printf(fmt: ptr[U8], ..) -> I32

fn main() = {
    let mut slice = [1, 3, 42, 487, 5, 66, 4055, 33]
    unsafe printf("Before: ".data)
    slice.print()
    bubble_sort(&mut slice)
    unsafe printf("After: ".data)
    slice.print()
}

fn bubble_sort(slice: &mut [Int]) = {
    let mut n = slice.len
    let mut swapped = true

    for if swapped {
        swapped = false

        let mut i = 1
        for if i < n {
            if slice.[i - 1] > slice.[i] {
                slice.[i] = slice.[i - 1] := slice.[i]
                swapped = true
            }

            i += 1
        }

        n -= 1
    }
}

fn print(slice: &[Int]) = {
    let mut i = 0
    for if i < slice.len {
        unsafe printf("%d ".data, slice.[i])
        i += 1
    }
    unsafe printf("\n".data)
}
