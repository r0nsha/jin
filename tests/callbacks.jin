fn extern "c" printf(fmt: *U8, ..) -> I32

fn main() = {
	run(print_answer)
	do_add(add, 1, 2)
	unsafe printf("map: %d\n".ptr, map(1, int_to_uint))
}

fn run(f: fn()) = f()

fn print_answer() = {
	unsafe printf("The answer is %d\n".ptr, 42)
}

fn add(a: Int, b: Int) -> Int = {
	a + b
}

fn do_add(f: fn(Int, Int) -> Int, a: Int, b: Int) = {
	unsafe printf("a + b = %d\n".ptr, f(a, b))
}

fn map[A, B](val: A, f: fn(A) -> B) -> B = {
	f(val)
}

fn int_to_uint(val: Int) -> UInt = {
	val as _
}
