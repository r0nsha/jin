import std.{
    io.println,
    int.*
}

fn main() unit = {
    i()
    //u()
}

fn i() unit = {
    println("signed:")

    let a: i8 = 1
    let b: i8 = I8_MAX

    if {b > 0 && a > I8_MAX - b} || {b < 0 && a < I8_MIN - b} {
	println("overflow add")
    }

    if {b < 0 && a > I8_MAX + b} || {b > 0 && a < I8_MIN + b} {
	println("overflow sub")
    }

    if {b != 0 && a > I8_MAX / b} || {b != 0 && a < I8_MIN / b} {
	println("overflow mul")
    }
}

