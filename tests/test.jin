@(lib = "./foo")
fn extern hello()

@(lib = "./foo")
let extern answer int

import extern "./foo"

extern foo {
	let answer int
	fn hello()
}

@(lib = "c")
fn extern exit(status int) never

@(lib = "c")
fn extern write(fd i32, buf *u8, count uint) int

let stdout = 1

fn print(fmt str) = {
	write(stdout, fmt.ptr, fmt.len)
}

fn println(fmt str) = {
	print(fmt)
	print("\n")
}

fn main() = {
	println("Hello, World!")
	hello()
	fn my_answer() int = answer
	my_answer()
	exit(0)
}
