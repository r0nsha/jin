import extern "./foo"

fn extern "c" hello()
let extern answer: int

fn extern "c" printf(fmt: *u8, ..) -> i32
fn extern "c" write(fd: i32, buf: *u8, count: uint) -> i32

let stdout: i32 = 1

fn print(fmt: str) = {
	unsafe write(stdout, fmt.ptr, fmt.len)
}

fn println(fmt: str) = {
	print(fmt)
	print("\n")
}

fn main() = {
	println("Hello, World!")
	unsafe hello()
	run(print_answer)
	do_add(add, 1, 2)
	unsafe printf("num = %d\n".ptr, map(1, id))
}

fn print_answer() = {
	unsafe printf("The answer is %d\n".ptr, answer)
}

fn add(a: int, b: int) -> int = {
	a + b
}

fn do_add(f: fn(int, int) -> int, a: int, b: int) = {
	unsafe printf("a + b = %d\n".ptr, f(a, b))
}

fn run(f: fn()) = f()

fn id[T](x: T) -> T = x

fn map[A, B](val: A, f: fn(A) -> B) -> B =
	f(val)
