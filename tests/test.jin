import extern "./foo"

fn extern hello()
let extern answer: int

fn extern printf(fmt: *u8, ..) -> i32
fn extern write(fd: i32, buf: *u8, count: uint) -> i32

let stdout = 1

fn print(fmt: str) {
	write(stdout, fmt.ptr, fmt.len)
}

fn println(fmt: str) {
	print(fmt)
	print("\n")
}

fn main {
	println("Hello, World!")
	hello()
	printf("The answer is %d\n".ptr, answer)
}

fn run(f: fn) { f() }
fn run1(f: fn()) { f() }
fn run2(f: fn() -> {}) { f() }
fn run3(f: fn -> {}) { f() }
