use raylib as r

fn main {
	let screen_width = 800
	let screen_height = 450

	r.InitWindow(screen_width, screen_height, "raylib - basic window".ptr)
	r.SetTargetFPS(60)

	loop if !r.WindowShouldClose() {
		r.BeginDrawing()
		r.ClearBackground(r.RAYWHITE)
		r.DrawText("Congrats! You created your first window!".ptr, 190, 200, 20, r.LIGHTGRAY)
		r.EndDrawing()
	}

	r.CloseWindow()
}
