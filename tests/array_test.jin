fn extern "c" printf(fmt: *U8, ..) -> I32

fn main() = {
	let mut array = Array.new[Int]()

	println("Array push:")
	array.push(1)
	array.push(2)
	array.push(3)
	array.push(4)
	array.push(5)
	array.push(6)
	array.push(7)

	array.print()

	array.print_at(0)
	array.print_at(3)
	array.print_at(8)

	println("\nArray take:")
	let slice = array.take()
	slice.print()

	println("\nArray pop:")
	let mut array = Array.new[Int](7) fn(idx) { as[Int](idx + 10) }
	array.print()

	match array.pop() {
		Some(x) -> unsafe printf("popped = Some(%d)\n".ptr, x)
		None -> unsafe printf("popped = None\n".ptr)
	}

	array.print()

	println("\nArray clear:")
	array.clear()
	array.print()
}

fn print_at(array: &Array[Int], idx: UInt) = {
	match array.get(idx) {
		Some(x) -> unsafe printf("array[%d] = Some(%d)\n".ptr, idx, x)
		None -> unsafe printf("array[%d] = None\n".ptr, idx)
	}
}

fn print(array: &Array[Int]) = {
	array.as_ref().print()
}

fn print(slice: &[Int]) = {
	unsafe printf("[".ptr)
	let mut i = 0
	for if i < slice.len {
		unsafe printf("%d".ptr, slice.[i])
		if i < slice.len - 1 {
			unsafe printf(", ".ptr)
		}
		i += 1
	}
	unsafe printf("] | len=%d cap=%d\n".ptr, slice.len, slice.cap)
}
